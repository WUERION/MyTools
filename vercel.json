{
    "version": 2,
    "builds": [
        {
            "src": "src/**/*.php",
            "use": "@vercel/php",
            "config": {
                "php": {
                    "version": "8.0"
                }
            }
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "/src/$1"
        }
    ]
}
